/* pages/main/address/address.wxss */
.main {
  width: 100%;
  min-height: 100vh;
  background: #F7F7F7;
}

.addlist {
  width: 100%;
  padding-top: 30rpx;
}

.addlists {
  width: 92%;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
  padding: 34rpx 0 24rpx 0;
  margin-bottom: 30rpx;
}

.addlistname {
  display: flex;
  padding: 0 34rpx;
}

.addlistusername {
  font-size: 28rpx;
  color: #101010;
}

.addlistphone {
  font-size: 28rpx;
  color: #101010;
  margin-left: 48rpx;
}

.addlistress {
  padding: 0 34rpx;
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}

.line {
  width: 622rpx;
  height: 1px;
  background: #eee;
  margin: 22rpx auto;

}

.addlistbot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 34rpx;
}

.quan {
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  background-color: rgba(255, 255, 255, 0);
  text-align: center;
  border: 1px solid rgba(187, 187, 187, 1);
  border-radius: 50%;
  margin-right: 8rpx;
}

.addlistleft {
  display: flex;
  align-items: center;
}

.addlistright {
  display: flex;
  align-items: center;
}

.adddefault {
  font-size: 24rpx;
  color: #101010;
}

.addaddress {
  width: 520rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 60rpx;
  background-color: rgba(225, 225, 225, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  border: 1px solid rgba(255, 255, 255, 0);
  margin: 0 auto;
}

.defaultactive {
  background: #999;
}