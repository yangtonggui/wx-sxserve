.main{
  width: 100%;
  min-height: 100vh;
  background: #F7F7F7 100%;
}
.newadd{
  width: 92%;
  background: #fff;
  margin:0 auto;
  border-radius: 10rpx;
}
.newaddlist{
  width: 100%;
  display: flex;
  padding:32rpx 0;
  width: 92%;
  margin:0 auto;
  border-bottom:1px solid #eee;
  align-items: center;
}
.newaddlisttitle{
  font-size: 28rpx;
  color: #101010 100%;
  width: 200rpx;
}
.newaddlist input{
  flex: 1;
  font-size: 26rpx;
}
.holder{
  font-size: 26rpx;
  color: #999;
}
.newaddlists{
  width: 100%;
  display: flex;
  padding:32rpx 0;
  width: 92%;
  margin:0 auto;
  border-bottom:1px solid #eee;
}
.addarea{
  flex: 1;
}
.addarea input{
  font-size: 26rpx;
  width: 360rpx;
}
.icon-youjiantou{
  color: #999;
  font-size: 24rpx;
  margin-right: 10rpx;
}
.quan{
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  background-color: rgba(255, 255, 255, 0);
  text-align: center;
  border: 1px solid rgba(187, 187, 187, 1);
  border-radius: 50%;
  margin-right: 8rpx;
}
.default{
  font-size: 26rpx;
  color: #777;
}
.city{
  display:flex;
  width:100%;
  align-items:center;
  justify-content: space-between;
}
.bc{
  width: 520rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 60rpx;
  background-color: rgba(225, 225, 225, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  border: 1px solid rgba(255, 255, 255, 0);
  position: absolute;
  left:0;
  right:0;
  margin:0 auto;
  bottom: 400rpx;
}