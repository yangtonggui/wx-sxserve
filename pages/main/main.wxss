/* pages/main/main.wxss */
.main{
  background: #fff;
  width: 100%;
  min-height: 100vh;
}
.head{
  width: 100%;
  position: relative;
}
.headpic{
  width: 100%;
  height: 324rpx;
}
.user{
  position: absolute;
  display: flex;
  justify-content: space-between;
  width: 100%;
  bottom: 138rpx;
  align-items: center;
}
.user_left{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.userpic{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userpic image{
  width: 100%;
  height: 100%;
}
.user_right image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 54rpx;
}
.username{
  font-size: 36rpx;
  color: #fff;
  margin-left: 26rpx;
  font-family: PingFang-SC-Heavy;
}
.userlist{
  width: 92%;
  height: 200rpx;
  border-radius: 5px;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0px 13px 12px 0px rgba(169, 169, 169, 0.11);
  position: absolute;
  left:0;
  right:0;
  margin:0 auto;
  top:252rpx;
  display: flex;
}
.fun{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.funpic{
  width: 44rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.funpic image{
  height: 100%;
}
.funname{
  font-size: 24rpx;
  color: #333;
  margin-top: 24rpx;
}
.body{
  width: 100%;
  margin-top: 160rpx;
}
.list{
  display: flex;
  justify-content: space-between;
  padding:44rpx 0;
  border-bottom: 1px solid #EAEAEA;
  width: 92%;
  margin:0 auto;
  align-items: center;
}
.listname{
  font-size: 28rpx;
  color: #333;
}
.list image{
  width: 22rpx;
  height: 22rpx;
}
.foot{
  position: fixed;
  bottom: 0;
  left:0;
}