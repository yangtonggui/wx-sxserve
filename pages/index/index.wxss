.main {
  width: 100%;
  min-height: 100vh;
  background: #fff;
  margin-bottom: 160rpx;
}

.search {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.searchname {
  font-size: 32rpx;
  color: #000;
  font-family: 'Arial-Black';
  position: absolute;
  left: 28rpx;
}

.searchinp {
  width: 314rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: rgba(245, 245, 245, 1);
  display: flex;
  align-items: center;
}

.icon-fangdajing {
  font-size: 30rpx;
  color: #999;
  margin-left: 34rpx;
}

.searchinp input {
  width: 174rpx;
  height: 34rpx;
  font-size: 24rpx;
  color: #808080;
  margin-left: 12rpx;
}

.body {
  width: 100%;
}

.banner {
  width: 100%;
  height: 380rpx;
}

.banner image {
  width: 100%;
  height: 380rpx;
}

.sec {
  width: 100%;
  display: flex;
  margin-top: 28rpx;
}

.seclist {

  display: flex;
  flex-direction: column;
  align-items: center;
}

.secpic {
  width: 42rpx;
  height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 53rpx;
}

.search img {
  height: 100%;
}

.secname {
  font-size: 22rpx;
  color: #343434;
  margin-top: 12rpx;
}

.nearby {
  width: 100%;
}

.nearhead {
  display: flex;
  align-items: center;
  width: 92%;
  margin: 0 auto;
  justify-content: space-between;
  margin-top: 58rpx;
  padding-bottom: 14rpx;
  border-bottom: 1rpx solid #EAEAEA;
}

.nearhead_left {
  display: flex;
  align-items: center;
}

.nearhead_left image {
  width: 36.88rpx;
  height: 38.6rpx;
}

.nlname {
  font-size: 32rpx;
  color: #333;
  margin-left: 10rpx;
}

.nrname {
  font-size: 24rpx;
  color: #777;
  margin-right: 10rpx;
  line-height: 24rpx;
}

.nearhead_right {
  display: flex;
  align-items: center;
}

.nearhead_right image {
  width: 8rpx;
  height: 14rpx;
}

.icon-youjiantou {
  font-size: 16rpx;
  color: #888;
  margin-top: 6rpx;
}

.nearshop {
  width: 96%;
  margin-left: 4%;
  margin-top: 28rpx;
}

.nshop {
  display: flex;
  width: 100%;

  /* white-space: nowrap; */
}

.nshoplist {
  width: 410rpx;
  height: 212rpx;
  margin-right: 20rpx;
  position: relative;
}

.nshoptext {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
}

.ns1 {
  font-size: 28rpx;
  color: #333;
  margin: 18rpx 0 0 12rpx;
  font-family: PingFangSC-Medium;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ns2 {
  font-size: 22rpx;
  color: #888;
  margin: 18rpx 0 0 12rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ns3 {
  display: flex;
  align-items: center;
  margin: 30rpx 0 0 12rpx;
}

.nsjuli {
  font-size: 22rpx;
  color: #888;
}

.nsstuts {
  font-size: 22rpx;
  color: #333;
  margin-left: 18rpx;
}

.nshoplist image {
  max-width: 100%;
  height: 100%;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.tips {
  width: 100%;
  margin-top: 60rpx;
  height: 216rpx;
}

.tips image {
  width: 100%;
  height: 100%;
}

.det {
  margin-bottom: 60rpx;
}

.list {
  width: 92%;
  margin: 0 auto;
  margin-top: 70rpx;
  border-radius: 14rpx;
  overflow: hidden;
  box-shadow: 0px 13px 12px 0px rgba(169, 169, 169, 0.11);
}

.list image {
  width: 100%;
  height: 360rpx;
}

.listdet {
  width: 100%;
  padding: 30rpx 0;
  overflow: hidden;
}

.listdettop {
  font-size: 28rpx;
  color: #333;
  margin-left: 18rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.listdetbot {
  font-size: 24rpx;
  color: #888;
  margin-top: 24rpx;
  margin-left: 18rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}